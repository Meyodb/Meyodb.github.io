# Activer le moteur de réécriture
RewriteEngine On

# Bloquer l'accès direct aux fichiers .php sauf pour index.php et status.php
<FilesMatch "^(?!index|status).*\.php$">
  Order deny,allow
  Deny from all
</FilesMatch>

# Autoriser CORS
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "https://meyodb.github.io"
  Header set Access-Control-Allow-Methods "GET, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Access-Control-Allow-Headers, Authorization, X-Requested-With"
  Header set Access-Control-Max-Age "3600"
  
  # Gérer les requêtes OPTIONS (pré-flight CORS)
  RewriteEngine On
  RewriteCond %{REQUEST_METHOD} OPTIONS
  RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Compresser les réponses JSON
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cacher pour mise en cache du navigateur
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType application/json "access plus 15 minutes"
</IfModule>

# Protection contre l'accès au répertoire parent
<IfModule mod_rewrite.c>
  RewriteCond %{THE_REQUEST} \.\.\/
  RewriteRule .* - [F]
</IfModule> 